const abrigos = [];

function adicionarAbrigo() {
    const nome = prompt("Informe o nome do abrigo:");
    const endereco = prompt("Informe o endereço do abrigo:");
    const telefone = prompt("Informe o telefone do abrigo:");
    const capacidade = prompt("Informe a capacidade de lotação do abrigo:");

    const abrigo = {
        nome,
        endereco,
        telefone,
        capacidade
    };

    abrigos.push(abrigo);
    console.log("Abrigo adicionado com sucesso!");
}

function listarAbrigoss() {
    if (abrigos.length === 0) {
        console.log("Nenhum abrigo cadastrado.");
        return;
    }

    console.log("Lista de Abrigos:");
    abrigos.forEach((abrigo, index) => {
        console.log(`Abrigo ${index + 1}: ${abrigo.nome}, Endereço: ${abrigo.endereco}, Telefone: ${abrigo.telefone}, Capacidade: ${abrigo.capacidade}`);
    });
}

function procurarAbrigo() {
    const nome = prompt("Informe o nome do abrigo que deseja procurar:");
    const abrigoEncontrado = abrigos.find(abrigo => abrigo.nome.toLowerCase() === nome.toLowerCase());

    if (abrigoEncontrado) {
        console.log(`Abrigo encontrado: ${abrigoEncontrado.nome}, Endereço: ${abrigoEncontrado.endereco}, Telefone: ${abrigoEncontrado.telefone}, Capacidade: ${abrigoEncontrado.capacidade}`);
    } else {
        console.log("Abrigo não encontrado.");
    }
}

function menu() {
    let opcao;
    
    do {
        opcao = prompt("Escolha uma opção:\n1. Adicionar Abrigo\n2. Listar Abrigos\n3. Procurar Abrigo\n4. Sair");

        switch (opcao) {
            case '1':
                adicionarAbrigo();
                break;

            case '2':
                listarAbrigoss();
                break;

            case '3':
                procurarAbrigo();
                break;

            case '4':
                console.log("Saindo...");
                break;

            default:
                console.log("Opção inválida. Tente novamente.");
        }
    } while (opcao !== '4');
}

// Iniciar o menu
menu();
